@page
@model bookingadvisor.Pages.IndexModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="~/css/main.css" />
</head>
<body>
    <main>
        <div id="upper-box">
            <div class="form-box">
                <p id="save-money">Save money using our website</p>
                <div id="user-choice">
                    <input id="search-box" type="text" placeholder="Where do you want to go?" />
                    <button id="find-deal">Find Deal</button>
                    <p id="output-deal"></p>
                </div>
            </div>
            <div id="table-box">
                <div class="tour-place">
                    <img src="~/assets/tour-place/@Model.PickPlace .jpg" />
                    <div class="tour-content">
                        <h1 class="tour-title">@Model.PickPlace</h1>
                        <p class="tour-desc"></p>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="~/js/app.js"></script>
</body>